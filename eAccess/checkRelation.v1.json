{
  "openapi": "3.0.0",
  "info": {
    "title": "checkRelation",
    "version": "1.01"
  },
  "servers": [
    {
      "url": "http://{host}:9031"
    }
  ],
  "paths": {
    "/command": {
      "post": {
        "summary": "Check Relation",
        "operationId": "post-command",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../models/response_command.v1.json"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "../models/request_command.v1.json"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "params": {
                        "type": "object",
                        "required": [
                          "cpid",
                          "ocid",
                          "relatedCpid",
                          "operationType",
                          "existenceRelation"
                        ],
                        "properties": {
                          "cpid": {
                            "type": "string",
                            "description": "cpid объекта в котором проверяется связь",
                            "pattern": "^[a-z]{4}-[a-z0-9]{6}-[A-Z]{2}-[0-9]{13}$",
                            "example": "ocds-b3wdp1-MD-1580458690892"
                          },
                          "ocid": {
                            "type": "string",
                            "pattern": "^[a-z]{4}-[a-z0-9]{6}-[A-Z]{2}-[0-9]{13}-(AC|EI|EV|FS|NP|PN|TP)-[0-9]{13}$",
                            "description": "ocid объекта в котором проверяется связь",
                            "example": "ocds-b3wdp1-MD-1580458690892-EV-1580458791896"
                          },
                          "relatedCpid": {
                            "type": "string",
                            "pattern": "^[a-z]{4}-[a-z0-9]{6}-[A-Z]{2}-[0-9]{13}$",
                            "description": "cpid объекта на который проверятся связь",
                            "example": "ocds-b3wdp1-MD-1580458690892"
                          },
                          "operationType": {
                            "type": "string",
                            "enum": [
                              "relationAP",
                              "createRfq"
                            ]
                          },
                          "existenceRelation": {
                            "type": "boolean",
                            "description": "проверка наличия(true)/отсутствия(false) связи\n"
                          }
                        }
                      }
                    },
                    "required": [
                      "params"
                    ]
                  },
                  {
                    "type": "object",
                    "properties": {
                      "action": {
                        "type": "string",
                        "enum": [
                          "checkRelation"
                        ]
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}