{
  "openapi": "3.0.0",
  "info": {
    "title": "getDataForContract",
    "version": "1.03"
  },
  "servers": [
    {
      "url": "http://{host}:9031"
    }
  ],
  "paths": {
    "/command": {
      "post": {
        "summary": "Get Data For Contract",
        "operationId": "post-command",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "../models/response_command.v1.json"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "result": {
                          "type": "object",
                          "required": [
                            "tender",
                            "parties"
                          ],
                          "properties": {
                            "tender": {
                              "type": "object",
                              "required": [
                                "classification",
                                "mainProcurementCategory",
                                "lots",
                                "items",
                                "procurementMethod",
                                "procurementMethodDetails"
                              ],
                              "properties": {
                                "classification": {
                                  "type": "object",
                                  "required": [
                                    "id",
                                    "scheme",
                                    "description"
                                  ],
                                  "properties": {
                                    "id": {
                                      "type": "string"
                                    },
                                    "scheme": {
                                      "type": "string"
                                    },
                                    "description": {
                                      "type": "string"
                                    }
                                  }
                                },
                                "mainProcurementCategory": {
                                  "type": "string",
                                  "enum": [
                                    "goods",
                                    "works",
                                    "services"
                                  ]
                                },
                                "lots": {
                                  "type": "array",
                                  "items": {
                                    "type": "object",
                                    "properties": {
                                      "id": {
                                        "type": "string"
                                      },
                                      "internalId": {
                                        "type": "string"
                                      },
                                      "title": {
                                        "type": "string"
                                      },
                                      "description": {
                                        "type": "string",
                                        "description": "опциональный для secind stage competition (т.к. опциональный в PCR)\n"
                                      },
                                      "placeOfPerformance": {
                                        "type": "object",
                                        "required": [
                                          "address"
                                        ],
                                        "properties": {
                                          "description": {
                                            "type": "string"
                                          },
                                          "address": {
                                            "$ref": "../models/address.v1.json"
                                          }
                                        }
                                      }
                                    },
                                    "required": [
                                      "id",
                                      "title",
                                      "placeOfPerformance"
                                    ]
                                  }
                                },
                                "items": {
                                  "type": "array",
                                  "items": {
                                    "type": "object",
                                    "properties": {
                                      "id": {
                                        "type": "string"
                                      },
                                      "internalId": {
                                        "type": "string"
                                      },
                                      "classification": {
                                        "type": "object",
                                        "required": [
                                          "id",
                                          "scheme",
                                          "description"
                                        ],
                                        "properties": {
                                          "id": {
                                            "type": "string"
                                          },
                                          "scheme": {
                                            "type": "string"
                                          },
                                          "description": {
                                            "type": "string"
                                          }
                                        }
                                      },
                                      "additionalClassifications": {
                                        "type": "array",
                                        "items": {
                                          "type": "object",
                                          "properties": {
                                            "id": {
                                              "type": "string"
                                            },
                                            "scheme": {
                                              "type": "string",
                                              "enum": [
                                                "CPV",
                                                "CPVS"
                                              ]
                                            },
                                            "description": {
                                              "type": "string"
                                            }
                                          },
                                          "required": [
                                            "id",
                                            "scheme",
                                            "description"
                                          ]
                                        }
                                      },
                                      "quantity": {
                                        "type": "number"
                                      },
                                      "unit": {
                                        "type": "object",
                                        "required": [
                                          "id",
                                          "name"
                                        ],
                                        "properties": {
                                          "id": {
                                            "type": "string"
                                          },
                                          "name": {
                                            "type": "string"
                                          }
                                        }
                                      },
                                      "description": {
                                        "type": "string"
                                      },
                                      "relatedLot": {
                                        "type": "string"
                                      }
                                    },
                                    "required": [
                                      "id",
                                      "classification",
                                      "quantity",
                                      "unit",
                                      "description",
                                      "relatedLot"
                                    ]
                                  }
                                },
                                "procurementMethod": {
                                  "type": "string"
                                },
                                "procurementMethodDetails": {
                                  "type": "string"
                                },
                                "additionalProcurementCategories": {
                                  "type": "array",
                                  "items": {
                                    "type": "string",
                                    "enum": [
                                      "goods",
                                      "works",
                                      "services"
                                    ]
                                  }
                                }
                              }
                            },
                            "parties": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "id": {
                                    "type": "string"
                                  },
                                  "name": {
                                    "type": "string"
                                  },
                                  "identifier": {
                                    "$ref": "../models/identifier.v1.json"
                                  },
                                  "additionalIdentifiers": {
                                    "type": "array",
                                    "items": {
                                      "$ref": "../models/identifier.v1.json"
                                    }
                                  },
                                  "address": {
                                    "$ref": "../models/address.v1.json"
                                  },
                                  "contactPoint": {
                                    "$ref": "../models/contact_point.v1.json"
                                  },
                                  "details": {
                                    "type": "object",
                                    "properties": {
                                      "typeOfBuyer": {
                                        "type": "string",
                                        "enum": [
                                          "BODY_PUBLIC",
                                          "EU_INSTITUTION",
                                          "MINISTRY",
                                          "NATIONAL_AGENCY",
                                          "REGIONAL_AGENCY",
                                          "REGIONAL_AUTHORITY"
                                        ]
                                      },
                                      "mainGeneralActivity": {
                                        "type": "string",
                                        "enum": [
                                          "DEFENCE",
                                          "ECONOMIC_AND_FINANCIAL_AFFAIRS",
                                          "EDUCATION",
                                          "ENVIRONMENT",
                                          "GENERAL_PUBLIC_SERVICES",
                                          "HEALTH",
                                          "HOUSING_AND_COMMUNITY_AMENITIES",
                                          "PUBLIC_ORDER_AND_SAFETY",
                                          "RECREATION_CULTURE_AND_RELIGION",
                                          "SOCIAL_PROTECTION"
                                        ]
                                      },
                                      "mainSectoralActivity": {
                                        "type": "string",
                                        "enum": [
                                          "AIRPORT_RELATED_ACTIVITIES",
                                          "ELECTRICITY",
                                          "EXPLORATION_EXTRACTION_COAL_OTHER_SOLID_FUEL",
                                          "EXPLORATION_EXTRACTION_GAS_OIL",
                                          "PORT_RELATED_ACTIVITIES",
                                          "POSTAL_SERVICES",
                                          "PRODUCTION_TRANSPORT_DISTRIBUTION_GAS_HEAT",
                                          "RAILWAY_SERVICES",
                                          "URBAN_RAILWAY_TRAMWAY_TROLLEYBUS_BUS_SERVICES",
                                          "WATER"
                                        ]
                                      },
                                      "buyerProfile": {
                                        "type": "string"
                                      }
                                    }
                                  },
                                  "roles": {
                                    "type": "array",
                                    "items": {
                                      "type": "string",
                                      "enum": [
                                        "buyer"
                                      ]
                                    }
                                  }
                                },
                                "required": [
                                  "id",
                                  "name",
                                  "identifier",
                                  "address",
                                  "contactPoint",
                                  "roles"
                                ]
                              }
                            }
                          }
                        }
                      },
                      "required": [
                        "result"
                      ]
                    }
                  ]
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "../models/request_command.v1.json"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "params": {
                        "type": "object",
                        "required": [
                          "relatedCpid",
                          "relatedOcid",
                          "awards"
                        ],
                        "properties": {
                          "relatedCpid": {
                            "$ref": "../models/cpid.v1.json"
                          },
                          "relatedOcid": {
                            "$ref": "../models/ocid.v1.json"
                          },
                          "awards": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "string"
                                },
                                "relatedLots": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  }
                                }
                              },
                              "required": [
                                "id",
                                "relatedLots"
                              ]
                            }
                          }
                        }
                      }
                    },
                    "required": [
                      "params"
                    ]
                  },
                  {
                    "type": "object",
                    "properties": {
                      "action": {
                        "type": "string",
                        "enum": [
                          "getDataForContract"
                        ]
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}