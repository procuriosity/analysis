{
  "title": "organizationSupplierRequest",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "identifier": {
      "$ref": "./identifier.v1.json"
    },
    "additionalIdentifiers": {
      "type": "array",
      "items": {
        "$ref": "./identifier.v1.json"
      }
    },
    "address": {
      "type": "object",
      "required": [
        "addressDetails"
      ],
      "properties": {
        "streetAddress": {
          "type": "string",
          "description": "is required for MD"
        },
        "postalCode": {
          "type": "string"
        },
        "addressDetails": {
          "type": "object",
          "required": [
            "country"
          ],
          "properties": {
            "country": {
              "type": "object",
              "required": [
                "id"
              ],
              "properties": {
                "id": {
                  "type": "string"
                },
                "description": {
                  "type": "string",
                  "description": "is required for LT"
                },
                "scheme": {
                  "type": "string",
                  "description": "is required for LT"
                }
              }
            },
            "region": {
              "type": "object",
              "description": "is required for MD",
              "properties": {
                "id": {
                  "type": "string"
                },
                "description": {
                  "type": "string",
                  "description": "is required for LT"
                },
                "scheme": {
                  "type": "string",
                  "description": "is required for LT"
                }
              },
              "required": [
                "id"
              ]
            },
            "locality": {
              "type": "object",
              "description": "is required for MD",
              "required": [
                "id"
              ],
              "properties": {
                "id": {
                  "type": "string"
                },
                "description": {
                  "type": "string",
                  "description": "is required for LT"
                },
                "scheme": {
                  "type": "string",
                  "description": "is required for LT"
                }
              }
            }
          }
        }
      }
    },
    "contactPoint": {
      "$ref": "./contact_point.v1.json"
    },
    "persones": {
      "type": "array",
      "items": {
        "$ref": "./personSupplier.v1.json"
      }
    },
    "details": {
      "type": "object",
      "required": [
        "scale"
      ],
      "properties": {
        "typeOfSupplier": {
          "type": "string",
          "enum": [
            "company",
            "individual"
          ]
        },
        "mainEconomicActivities": {
          "type": "array",
          "items": {
            "$ref": "./mainEconomicActivity.v1.json"
          }
        },
        "scale": {
          "type": "string",
          "enum": [
            "micro",
            "sme",
            "large"
          ],
          "description": "классификация категории организации"
        },
        "bankAccounts": {
          "type": "array",
          "items": {
            "$ref": "./bankAccount.v1.json"
          }
        },
        "legalForm": {
          "$ref": "./legalForm.v1.json"
        }
      }
    }
  },
  "required": [
    "name",
    "identifier",
    "address",
    "contactPoint",
    "details"
  ]
}