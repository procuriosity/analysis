                                          "id": {
                                            "type": "string"
                                          },
                                          "description": {
                                            "type": "string",
                                            "description": "is required for LT"
                                          },
                                          "scheme": {
                                            "type": "string",
                                            "description": "is required for LT"
                                          }
                                        },
                                        "required": [
                                          "id"
                                        ]
